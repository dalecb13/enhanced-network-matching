// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum MatchStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
  COMPLETED
}

enum MatchHistoryStatus {
  ACCEPTED
  DECLINED
  EXPIRED
  COMPLETED
}

model User {
  id               String           @id @default(uuid())
  email             String           @unique
  name              String
  bio               String?
  avatarUrl         String?
  isActive          Boolean          @default(true)
  matchCooldownDays Int              @default(30)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  // Relations
  skills            UserSkill[]
  preferences       UserPreference[]
  matchesAsUser1    Match[]          @relation("User1Matches")
  matchesAsUser2    Match[]          @relation("User2Matches")
  feedbackGiven     MatchFeedback[]  @relation("FeedbackGivenBy")
  feedbackReceived  MatchFeedback[]  @relation("FeedbackReceivedBy")
  matchHistoryAsUser1 MatchHistory[] @relation("User1History")
  matchHistoryAsUser2 MatchHistory[] @relation("User2History")

  @@index([email])
  @@index([isActive])
}

model UserSkill {
  id                 String          @id @default(uuid())
  userId             String
  skillText          String
  experienceLevel    ExperienceLevel
  yearsOfExperience  Int?
  isPrimary          Boolean         @default(false)
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt

  // Relations
  user               User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([skillText])
}

model UserPreference {
  id            String   @id @default(uuid())
  userId        String
  preferenceText String
  priority      Int      @default(5)
  isRequired    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([preferenceText])
}

model Match {
  id              String          @id @default(uuid())
  user1Id         String
  user2Id         String
  externalMatchId String?
  matchScore      Float?
  matchReason     String?
  status          MatchStatus    @default(PENDING)
  matchedAt       DateTime       @default(now())
  expiresAt       DateTime?
  completedAt     DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  user1           User            @relation("User1Matches", fields: [user1Id], references: [id], onDelete: Cascade)
  user2           User            @relation("User2Matches", fields: [user2Id], references: [id], onDelete: Cascade)
  matchHistory    MatchHistory[]
  feedback        MatchFeedback[]

  @@index([user1Id])
  @@index([user2Id])
  @@index([externalMatchId])
  @@index([status])
  @@index([matchedAt])
}

model MatchHistory {
  id           String            @id @default(uuid())
  matchId      String
  user1Id      String
  user2Id      String
  matchedAt    DateTime
  cooldownUntil DateTime
  status       MatchHistoryStatus
  createdAt    DateTime          @default(now())

  // Relations
  match        Match             @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user1        User              @relation("User1History", fields: [user1Id], references: [id], onDelete: Cascade)
  user2        User              @relation("User2History", fields: [user2Id], references: [id], onDelete: Cascade)

  @@index([user1Id, user2Id, cooldownUntil])
  @@index([cooldownUntil])
  @@index([matchId])
}

model MatchFeedback {
  id                String    @id @default(uuid())
  matchId           String
  givenByUserId     String
  givenToUserId     String
  rating            Int
  feedbackText      String?
  wasGoodMatch      Boolean
  wouldMatchAgain   Boolean
  hasMet            Boolean   @default(false)
  meetingDateTime   DateTime?
  feedbackCategories String[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  match             Match     @relation(fields: [matchId], references: [id], onDelete: Cascade)
  givenByUser       User      @relation("FeedbackGivenBy", fields: [givenByUserId], references: [id], onDelete: Cascade)
  givenToUser       User      @relation("FeedbackReceivedBy", fields: [givenToUserId], references: [id], onDelete: Cascade)

  @@unique([matchId, givenByUserId])
  @@index([matchId])
  @@index([givenByUserId])
  @@index([givenToUserId])
  @@index([wasGoodMatch])
  @@index([wouldMatchAgain])
  @@index([hasMet])
  @@index([meetingDateTime])
}

model SystemConfig {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String
  description String?
  updatedAt   DateTime @updatedAt
  updatedBy   String?

  @@index([key])
}
